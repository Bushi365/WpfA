<Window x:Class="WpfApp1.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Имя пользователя:"/>
        <TextBox Grid.Row="0" Grid.Column="1" Name="usernameTextBox"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Пароль:"/>
        <PasswordBox Grid.Row="1" Grid.Column="1" Name="passwordBox"/>

        <Button Grid.Row="2" Grid.Column="1" Content="Войти" Click="LoginButton_Click"/>

        <Label Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Name="statusLabel"/>

    </Grid>
</Window>
